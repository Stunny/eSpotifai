 * @version 1.0
 *
 */
public class CustomColor {
	/**
	 * <p style="color:#282324;"><strong>COLOR</strong></p>
	 */
	final static Color background = Color.decode("#282324"); 
	/**
	 * <p style="color:#353332;"><strong>COLOR</strong></p>
	 */
	final static Color secondary = Color.decode("#353332");
	/**
	 * <p style="color:#4C4B49;"><strong>COLOR</strong></p>
	 */
	final static Color selected = Color.decode("#4C4B49");
	/**
	 * <p style="color:#6171CE;"><strong>COLOR</strong></p>
	 */
	final static Color highlight = Color.decode("#6171CE");
	/**
	 * 
	 */
	final static Color icon = Color.decode("#8E8B8A");
	
	/**
	 * Constructor de la paleta de colors.
	 */
	public CustomColor(){
	}
	
}
